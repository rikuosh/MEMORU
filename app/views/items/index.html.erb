<h1>ジャンル一覧</h1>
<% @genres.each do |genre| %>
 <%= link_to genre.name, items_path %>
<% end %>

<% if params[:genre_id] %>
 <h1><%= @genre.name %>の家財一覧</h1>
<% else %>
 <h1>家財一覧</h1>
<% end %>

<div>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>家財名</th>
        <th>ジャンル</th>
        <th>購入年月日</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <th>
          <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :item_image, size:"50x50", fallback: "no_image.jpg" %>
          <% end %>
        </th>
        <th><%= item.name %></th>
        <th><%= item.genre.name %></th>
        <th><%= item.purchase_date.strftime('%Y/%m/%d')  %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


<p><%= link_to "家財新規登録", new_item_path %></th>
<p><%= link_to "ジャンル登録", genres_path %>