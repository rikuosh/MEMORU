<%= render 'layouts/error', obj: @genre %>

<div class="container mt-3 mb-3">
 <h2>ジャンル編集</h2>
 <%= form_with model: @genre, url: genre_path(@genre),local:true do |f| %>
  <table class='table'>
   <td>ジャンル名</td>
   <td><%= f.text_field :name, autofocus: true %></td>
   <td><%= f.submit "変更を保存", class: "btn btn-sm btn-secondary" %></td>
  </table>
  <% end %>
 </div>