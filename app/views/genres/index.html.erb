<div>
<h1>ジャンル作成フォーム</h1>
<%= form_with model: @genre, local:true do |f| %>
<h4>ジャンル名</h4>
<%= f.text_field :name %>
<%= f.submit "作成" %>
<% end %>

 <thead>
    <tr>
     <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre|%>
    <tr>
     <td><%= genre.name %></td>
     <td><%= link_to '編集する', edit_genre_path(genre.id) %></td>
    </tr>
    <% end %>
  </tbody>
 </table>
 </div>