<h1>編集</h1>
 <h4>画像の変更はできません</h4>
  <%= attachment_image_tag @post_image, :image, size:"100x100" %>
<%= form_with model: @post_image, local:true do |f| %>
  <h4>説明</h4>
  <%= f.text_area :introduction %>
  <h4>タグ</h4>
  <%= f.text_field :tag_list, value: @post_image.tag_list.join(',')%>
  <%= f.submit '更新' %>
<% end %>